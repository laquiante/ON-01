auto lo
iface lo inet loopback

# auto swp1
# iface swp1
#     bridge-access 11
    
auto swp2
iface swp2
    bridge-access 11

auto swp10
iface swp10
    bridge-access 11

auto bridge
iface bridge
    bridge-ports swp10 swp2
    bridge-vids 11
    bridge-vlan-aware yes
    
auto mgmt
iface mgmt
    vrf-table auto
    address 127.0.0.1/8

auto eth0
iface eth0 inet dhcp
    vrf mgmt
    post-up sysctl -w net.ipv6.conf.eth0.accept_ra=2

source /etc/network/interfaces.d/*.cfg
