auto lo
iface lo inet loopback

auto swp1
iface swp1
    bridge-access 21

auto swp20
iface swp20

auto bridge
iface bridge
    bridge-ports swp20 swp1
    bridge-vids 21
    bridge-vlan-aware yes

auto mgmt
iface mgmt
    vrf-table auto
    address 127.0.0.1/8

auto eth0
iface eth0 inet dhcp
    vrf mgmt
    post-up sysctl -w net.ipv6.conf.eth0.accept_ra=2

source /etc/network/interfaces.d/*.cfg
