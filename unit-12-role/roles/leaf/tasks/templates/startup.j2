- set:
    bridge:
      domain:
        br_default:
          vlan:
            '1': {}
            '10': {}
    evpn:
      enable: on
      multihoming:
        enable: on
    nve:
      vxlan:
        enable: on
    router:
      bgp:
        autonomous-system: {{asn}}
        enable: on
        router-id: {{router_id}}
    system:
      hostname: leaf11
    vrf:
      default:
        router:
          bgp:
            address-family:
              ipv4-unicast:
                enable: on
                network:
                  {{loopback_ip}}: {}
              l2vpn-evpn:
                enable: on
            enable: on
            neighbor:
              swp21:
                remote-as: external
                type: unnumbered
              swp22:
                remote-as: external
                type: unnumbered
    interface:
      bond01:
        bond:
          member:
            swp25: {}
        bridge:
          domain:
            br_default:
              access: 10
        evpn:
          multihoming:
            segment:
              df-preference: 1000
              enable: on
              local-id: 1
              mac-address: {{mac_bond01}}
        type: bond
      lo:
        ip:
          address:
            {{loopback_ip}}: {}
        type: loopback
      swp21-22:
        evpn:
          multihoming:
            uplink: on
        type: swp
      vlan10:
        ip:
          address:
            {{svi10_ipv4}}: {}
        type: svi
        vlan: 10
